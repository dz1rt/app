<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".testProgram.TestProgram">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="505dp"
        android:layout_margin="4dp"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16px">

            <TextView
                android:id="@+id/txtTestTitle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="На что ты способен?"
                android:textAppearance="?android:textAppearanceLarge" />

            <TextView
                android:id="@+id/txtTestDescription"
                android:layout_width="match_parent"
                android:layout_height="267dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="110dp"
                android:text="Тут тестовое описание тренеровки."
                android:textAppearance="?android:textAppearanceMedium" />

            <Button
                android:id="@+id/goTestProgram"
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/cancelTestProgram"
                android:layout_centerHorizontal="true"
                android:text="Перейти к тренеровке" />

            <Button
                android:id="@+id/cancelTestProgram"
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="13dp"
                android:layout_marginStart="32dp"
                android:text="Пропустить тестовую тренеровку" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>